generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Parfum {
  id          Int @unique @id @default(autoincrement())
  name        String @unique
  image       String
  description String
  shopee      String
  price       BigInt
}

model FashionPria {
  id          Int @unique @id @default(autoincrement())
  name        String @unique
  image       String
  description String
  shopee      String
  price       BigInt
}

model FashionWanita {
  id          Int @unique @id @default(autoincrement())
  name        String @unique
  image       String
  description String
  shopee      String
  price       BigInt
}

model Admin {
  id            String @id @default(uuid())
  username      String
  name          String
  profile_image String
  password      String
}


